### Profile Control ###
alias showProfile='cat ~/.zshrc'
alias updateProfile='sudo vi ~/.zshrc; source ~/.zshrc'
alias aliasesshow='cat ~/.aliases'
alias aliasesupdate='sudo vi ~/.aliases; source ~/.zshrc'
alias aliasessync='sudo curl -sL "https://raw.githubusercontent.com/marcus604/Shell/main/aliases" > ~/.aliases; source ~/.zshrc'

### ZSH ###
alias ls='ls -l'

### Git ###
git config --global alias.st 'status'
git config --global alias.cm 'commit -m'
git config --global alias.d 'diff'

